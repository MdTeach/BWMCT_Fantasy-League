extends ../inc/layout
block content
    .wrapper.row2
        section.hoc.container.clear
            #signup-box
                if message
                    .alert.alert-danger
                        strong Bummer!
                        |  #{message}       
                                
                form(method='POST')
                    .left
                        h2 Register
                        | &#x9;&#x9;&#x9;
                        input(type='text', name='name', placeholder='Your name', required='')

                        | &#x9;&#x9;&#x9;
                        input(type='text', name='id', placeholder='Your fanasy id', required='')

                        | &#x9;&#x9;&#x9;
                        input(type='password', name='pass1', placeholder='password', required='')

                        | &#x9;&#x9;&#x9;
                        input(type='password', name='pass2', placeholder='confirm password', required='')
                        
                        | &#x9;&#x9;&#x9;
                        input(type='submit', value='Register')

                    .right
                        br
                        br
                        br
                        textarea(placeholder='If you win how can we know you?, please give us your phn number or school registration number or any thing valid', required='', cols='15', rows='10' name='msg')

        .alert.alert-info.center  
            strong Note:
            |  Data submitted cannot be changed   
