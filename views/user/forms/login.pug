extends ../inc/layout
block content
    .wrapper.row2
        section.hoc.container.clear
            #signup-box
                if message
                    .alert.alert-danger
                        strong Bummer!
                        |  The password or id didn't matched             
                .left
                    h1 Log In Here
                    
                    h3 BWMCT Fanasy 
                    
                    form(method='POST')

                        | &#x9;&#x9;&#x9;
                        input(type='text', name='id', placeholder='Your fanasy id', required='')

                        | &#x9;&#x9;&#x9;
                        input(type='password', name='pass', placeholder='password', required='')
                        
                        
                        | &#x9;&#x9;&#x9;
                        input(type='submit', value='Log in')

                        p Not a member? 
                        a(href='register') Sign Up
                        
